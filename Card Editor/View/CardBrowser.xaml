<Window x:Class="Card_Editor.CardBrowser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Card_Editor"
        mc:Ignorable="d"
        Title="CardBrowser" Height="600" Width="500" Loaded="Window_Loaded">
    <Grid>
        <DataGrid x:Name="cardGrid" HorizontalAlignment="Left" Height="532" VerticalAlignment="Top" Width="472" Margin="10,0,0,0"/>
        <Button x:Name="openButton" Content="Open" HorizontalAlignment="Left" Margin="10,540,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="deleteButton" Content="Delete" HorizontalAlignment="Left" Margin="103,540,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="407,539,0,0" VerticalAlignment="Top" Width="75" Click="cancelButton_Click"/>

    </Grid>
</Window>
